<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pw2.RecoverPasswordPage"
             Title="Recover Password">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Enter your Username" FontAttributes="Bold" FontSize="20" />
        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Button Text="Recover Password" Clicked="OnRecoverClicked" />
        <Label x:Name="resultLabel" TextColor="Red" />
        <Button Text="Back to Login" Clicked="OnBackClicked" />
    </VerticalStackLayout>

</ContentPage>
