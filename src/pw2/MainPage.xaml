<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pw2.MainPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15">

        <Label Text="Login" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold" />

        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Log In" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked" />

    </VerticalStackLayout>
</ContentPage>
